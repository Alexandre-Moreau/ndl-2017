<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingLeftLayout"
    android:id="@+id/rlTabList">

    <TextView
        android:id="@+id/tvTitreElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sizeTitreListe"/>

    <TextView
        android:id="@+id/tvDetailsElements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_below="@+id/tvTitreElement"
        android:layout_alignLeft="@+id/tvTitreElement"
        android:textSize="@dimen/sizeDetailsListe"/>

</RelativeLayout>